<h2>Welcome, {{name}}!</h2>
 


    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-body">content:</label>
        <textarea class="form-input" id="blog-body" name="blog-body"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  

 {{#if blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Your Blogs:</h3>

    {{#each blogs as |blog|}}
    <div>
      <div>
        <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
        <p>Created by you, on {{format_date blog.date_created}}</p>
      </div>
      <div >
        <a href="/edit/{{blog.id}}"><button>EDIT</button></a>
        <button data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}


<script src="./assets/js/dashboard.js"></script>