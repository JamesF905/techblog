<div>
  <h2>{{title}}</h2>
  <p>{{body}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  {{#if logged_in}}
      <h3>Leave a Comment:</h3>

    <form id="comment_form" class="form">
      <div class="form-group">
        <label for="comment-body">content:</label>
        <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
      </div>
      <div class="form-group">
        <button id="comment_now" type="submit" class="btn btn-primary" data-id="{{id}}">Post Comment</button>
      </div>
    </form>
  </div>
  {{else}}
    <p>Log in to leave a comment</p>
  {{/if}}
  {{#if comments.length}}
  <div class="col-md-6 blog-list">
    <h3>Comments:</h3>

    {{#each comments as |comment|}}
    <div>
      <div>
        <h4>{{comment.user_id}}</a></h4>
        <h4>{{comment.name}}</a></h4>
        <p>{{comment.body}}</p>
        <p>{{format_date comment.date_created}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/assets/js/comment.js"></script>