<div>
  {{#if logged_in}}
    <h3>Edit your Blog:</h3>

    <form id="edit_blog" class="form">
      <div class="form-group">
        <label for="blog-title">blog title:</label>
        <input class="form-input" type="text" id="edit-title" name="blog-title" value="{{title}}" />
      </div>
      <div class="form-group">
        <label for="blog-body">content:</label>
        <textarea class="form-input" id="edit-body" name="blog-body">{{body}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}">Update</button>
      </div>
    </form>
  </div>
  {{/if}}
</div>

<script src="/assets/js/edit.js"></script>